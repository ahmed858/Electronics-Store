@model IEnumerable<Category>

@{
    ViewBag.PageTitle = "Category Management";
    ViewBag.CardTitle = "Categories";

    Layout = "~/Views/shared/_Dashboard.cshtml";

}




<div class="md-3">

<a class="btn btn-primary" href="/Category/Create">Add</a>
</div>



<table class="table table-hover" width="100%">
    <tr>
        <td>Name</td>
        <td>Description</td>
        <td>Created Time</td>
        <td>Actions</td>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.CreatedTime</td>
            <td>
                <a class="btn btn-success" href="/Category/Edit/@item.Id">Edit</a>
                <a class="btn btn-danger" href="/Category/Delete/@item.Id">Delete</a>
            </td>
        </tr>
    }
</table>